generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Optional: for migrations with pooled connections
}

// ============================================
// USER & AUTH
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  phone         String?
  passwordHash  String?
  image         String?
  role          UserRole  @default(CUSTOMER)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  customer      Customer?
  staffProfiles StaffProfile[]
  orders        Order[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum UserRole {
  CUSTOMER
  STAFF
  MANAGER
  OWNER
  ADMIN
  SUPERADMIN
}

// ============================================
// CAFE & STAFF
// ============================================

model Cafe {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  image       String?
  address     String   // Required: Full address from Google Places
  city        String?
  country     String   @default("AU")
  latitude    Float?   // Latitude coordinate for geolocation
  longitude   Float?   // Longitude coordinate for geolocation
  placeId     String?  // Google Place ID for reference
  phone       String?
  email       String?
  timezone    String   @default("Asia/Kuala_Lumpur")
  currency    String   @default("MYR")
  taxRate     Float    @default(0.10)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Loyalty settings
  pointsPerDollar    Int @default(1)
  pointsPerRedemption Int @default(100) // Points needed for $1 discount

  // Relations
  staff       StaffProfile[]
  categories  Category[]
  products    Product[]
  orders      Order[]
  tables      Table[]
  pointTransactions PointTransaction[]
  cafeCustomers CafeCustomer[]

  @@map("cafes")
}

model StaffProfile {
  id        String   @id @default(cuid())
  userId    String
  cafeId    String
  role      StaffRole @default(BARISTA)
  pin       String?   // For clock-in
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  cafe  Cafe  @relation(fields: [cafeId], references: [id], onDelete: Cascade)

  @@unique([userId, cafeId])
  @@map("staff_profiles")
}

enum StaffRole {
  BARISTA
  CASHIER
  MANAGER
  OWNER
}

// ============================================
// MENU & PRODUCTS
// ============================================

model Category {
  id          String    @id @default(cuid())
  cafeId      String
  name        String
  description String?
  image       String?
  sortOrder   Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  cafe     Cafe      @relation(fields: [cafeId], references: [id], onDelete: Cascade)
  products Product[]

  @@map("categories")
}

model Product {
  id          String   @id @default(cuid())
  cafeId      String
  categoryId  String
  name        String
  description String?
  image       String?
  price       Float
  cost        Float?   // COGS for profit calculation
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  isPopular   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Coffee-specific metadata
  roastLevel  RoastLevel?
  origin      String?
  flavorNotes String[]

  cafe       Cafe           @relation(fields: [cafeId], references: [id], onDelete: Cascade)
  category   Category       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  modifiers  ProductModifier[]
  orderItems OrderItem[]

  @@map("products")
}

model ProductModifier {
  id        String   @id @default(cuid())
  productId String
  name      String   // e.g., "Milk Options"
  options   ModifierOption[]
  required  Boolean  @default(false)
  maxSelect Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_modifiers")
}

model ModifierOption {
  id         String   @id @default(cuid())
  modifierId String
  name       String   // e.g., "Oat Milk"
  price      Float    @default(0) // Additional cost
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  modifier ProductModifier @relation(fields: [modifierId], references: [id], onDelete: Cascade)

  @@map("modifier_options")
}

enum RoastLevel {
  LIGHT
  MEDIUM_LIGHT
  MEDIUM
  MEDIUM_DARK
  DARK
}

// ============================================
// ORDERS & PAYMENTS
// ============================================

model Order {
  id          String      @id @default(cuid())
  orderNumber String      // Human readable, e.g., "A-042"
  cafeId      String
  userId      String?     // Staff who created
  customerId  String?
  tableId     String?

  orderType   OrderType   @default(TAKEAWAY)
  status      OrderStatus @default(PENDING)

  subtotal      Float
  taxAmount     Float
  discountAmount Float    @default(0)
  tipAmount     Float     @default(0)
  total         Float

  pointsEarned  Int       @default(0)
  pointsRedeemed Int      @default(0)

  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  completedAt DateTime?

  cafe      Cafe        @relation(fields: [cafeId], references: [id])
  user      User?       @relation(fields: [userId], references: [id])
  customer  Customer?   @relation(fields: [customerId], references: [id])
  table     Table?      @relation(fields: [tableId], references: [id])
  items     OrderItem[]
  payments  Payment[]

  @@map("orders")
}

model OrderItem {
  id         String   @id @default(cuid())
  orderId    String
  productId  String
  name       String   // Denormalized
  quantity   Int
  unitPrice  Float
  modifiers  Json?    // Selected modifiers with prices
  notes      String?
  total      Float
  createdAt  DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model Payment {
  id            String        @id @default(cuid())
  orderId       String
  method        PaymentMethod
  amount        Float
  tip           Float         @default(0)
  status        PaymentStatus @default(PENDING)
  stripePaymentId String?
  cashReceived  Float?
  cashChange    Float?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("payments")
}

enum OrderType {
  DINE_IN
  TAKEAWAY
  PICKUP
  DELIVERY
}

enum OrderStatus {
  DRAFT
  PENDING
  PREPARING
  READY
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  CASH
  CARD
  MOBILE
  VOUCHER
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// ============================================
// TABLE MANAGEMENT
// ============================================

model Table {
  id       String      @id @default(cuid())
  cafeId   String
  name     String      // e.g., "Table 1", "Bar Seat A"
  capacity Int         @default(4)
  status   TableStatus @default(AVAILABLE)
  posX     Float       @default(0)
  posY     Float       @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  cafe   Cafe    @relation(fields: [cafeId], references: [id], onDelete: Cascade)
  orders Order[]

  @@map("tables")
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
  CLEANING
}

// ============================================
// LOYALTY & CUSTOMERS
// ============================================

model Customer {
  id             String       @id @default(cuid())
  userId         String       @unique
  phone          String?
  tier           LoyaltyTier  @default(BRONZE)
  pointsBalance  Int          @default(0)
  lifetimePoints Int          @default(0)
  lifetimeSpend  Float        @default(0)
  totalOrders    Int          @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders           Order[]
  pointTransactions PointTransaction[]
  vouchers         Voucher[]
  coffeeProfile    CoffeeProfile?
  cafeCustomers    CafeCustomer[]

  @@map("customers")
}

model CafeCustomer {
  id         String             @id @default(cuid())
  cafeId     String
  customerId String?
  phone      String?
  source     CafeCustomerSource @default(SCAN)
  createdAt  DateTime           @default(now())

  cafe     Cafe      @relation(fields: [cafeId], references: [id], onDelete: Cascade)
  customer Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([cafeId, customerId])
  @@unique([cafeId, phone])
  @@map("cafe_customers")
}

enum CafeCustomerSource {
  SCAN
  PHONE
}

model PointTransaction {
  id           String              @id @default(cuid())
  customerId   String
  cafeId       String
  orderId      String?
  type         PointTransactionType
  points       Int                 // Positive or negative
  balanceAfter Int
  description  String
  createdAt    DateTime            @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  cafe     Cafe     @relation(fields: [cafeId], references: [id])

  @@map("point_transactions")
}

model Voucher {
  id           String        @id @default(cuid())
  customerId   String
  code         String        @unique
  type         VoucherType
  value        Float         // Dollar value or percentage
  pointsCost   Int           // Points spent to get this
  status       VoucherStatus @default(ACTIVE)
  expiresAt    DateTime
  usedAt       DateTime?
  usedAtCafeId String?
  createdAt    DateTime      @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("vouchers")
}

model CoffeeProfile {
  id              String   @id @default(cuid())
  customerId      String   @unique
  profileType     String?  // e.g., "Bold Explorer"
  roastPreference Float?   // 1-5 scale
  strength        Float?   // 1-5 scale
  milkPreference  String?
  temperature     Float?   // 1-5 scale (iced to hot)
  sweetness       Float?   // 1-5 scale
  adventureScore  Float?   // 1-5 scale
  flavorNotes     String[]
  confidence      Float?   // Model confidence score
  generatedAt     DateTime @default(now())
  updatedAt       DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("coffee_profiles")
}

enum LoyaltyTier {
  BRONZE    // 0-999 lifetime
  SILVER    // 1000-4999
  GOLD      // 5000-14999
  PLATINUM  // 15000+
}

enum PointTransactionType {
  EARN
  REDEEM
  EXPIRE
  ADJUST
  BONUS
}

enum VoucherType {
  FREE_DRINK
  PERCENTAGE_OFF
  FIXED_AMOUNT
  FREE_UPGRADE
}

enum VoucherStatus {
  ACTIVE
  USED
  EXPIRED
  CANCELLED
}
